    </filter>
    <filter>
        <filter-name>OnlineStatus</filter-name>
        <filter-class>controller.UserController.OnlineStatus</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>OnlineStatus</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
